<div class="col-md-6 col-md-offset-3">

  <div class="panel panel-primary">
    <div class="panel-heading">
      <strong>
        <h2>New Message</h2>
      </strong>
    </div>
    <div class="panel-body">
      <%= form_for(@message) do |f| %>
        <div class="form-group">
          <%= f.label "Message to : " %>
          <%= f.select(:recipient_id,  User.all_except(current_user).collect {|u| [u.email, u.id]}, :prompt => 'Select', class: 'form-control') %>
        </div>
        <div class="form-group">
          <%= f.label "Your message here : " %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>        
        <div class="actions">
          <%= f.submit "Send" %>
        </div>
      <% end %>
    </div> 
  </div>     
</div>

